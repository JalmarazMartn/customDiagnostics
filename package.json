{
	"name": "customdiagnostics",
	"displayName": "Custom diagnostics and replacements",
	"description": "Configure your own diagnostics and replacements",
	"publisher": "JessAlmarazMartin",
	"icon": "images/FindAndReplace.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"author": {
		"name": "Jesús Almaraz Martín",
		"email": "JalmarazMartn@gmail.com"
	},	
	"activationEvents": [
		"onLanguage:al",
		"onLanguage:javascript",
		"onCommand:JAMCustomRuls.replaceAllRulesInAllDocuments"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "JAMCustomRuls.replaceAllRulesInAllDocuments",
				"title": "JAM Custom Rules. Change all rules in all documents"
			}		
		],
		"configuration": {
			"title": "JAM diagnostics and replacement",
			"properties": {
				"JAMDiagnostics.FilePath": {
					"type": "string",
					"default": "JAMRules.json",
					"description": "Absolute path of rules json file name"
				},
				"JAMDiagnostics.DefaultDiagnosticRuleset": {
					"type": "array",
					"default": [],
					"description": "Rulesets that will be used as diagnostics in problems Panel"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.17.27",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}