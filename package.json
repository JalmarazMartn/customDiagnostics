{
	"name": "customdiagnostics",
	"displayName": "customDiagnostics",
	"description": "Configure your own diagnostics",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:al",
		"onLanguage:javascript",
		"onCommand:JAMCustomRuls.replaceAllRulesInAllDocuments"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "JAMCustomRuls.replaceAllRulesInAllDocuments",
				"title": "JAM: Custom Rules. Change all rules in all documents"
			}		
		],
		"configuration": {
			"title": "JAm diagnostics and replacement",
			"properties": {
				"JAMDiagnosticsFile": {
					"type": "string",
					"default": "JAMRules.json",
					"description": "Rules json file name"
				},
				"DefaultDiagnosticRuleset": {
					"type": "array",
					"default": [],
					"description": "Rulesets that will be used as diagnostics in Problems Panel"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.17.27",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}